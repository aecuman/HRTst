@model IEnumerable<WebApplicationHR.Models.DM.HR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
@using(Html.BeginForm())
{ 
<p>
    Find by name: @Html.TextBox("searchString", ViewBag.FilterValue as string)
    @Html.DropDownList("branch", new List<SelectListItem>
    {
    new SelectListItem(){Text="Select Branch...",Value=""},
    new SelectListItem(){Text="Najjanakumbi",Value="Najjanakumbi"},
    new SelectListItem(){Text="Nansana",Value="Nansana"},
    new SelectListItem(){Text="Bukoto",Value="Bukoto"},
    new SelectListItem(){Text="Mengo",Value="Mengo"}
    })
    <input type="submit" value="Search" />
</p>
}

<table class="table">
    <tr>
        <th>
       Photo        
        </th>
        <th>
        First Name
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.SortingName })
         
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="80" height="80" src="@Url.Content("~/Images/profile/" + System.IO.Path.GetFileName(item.image))" />
            
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.FName)
        </td>
       
        
        <td>
            @Html.DisplayFor(modelItem => item.LName)
        </td>
        <td>
            <ul class="button-bar">
                <li><i class="fa fa-pencil"></i> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </li>
                <li><i class="fa fa-pencil"></i> @Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                <li><i class="fa fa-minus-square"></i> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>

            </ul>
        </td>
    </tr>
}

</table>
